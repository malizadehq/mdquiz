<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ListView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/lv">
	</ListView>
	<RelativeLayout android:id="@+id/RelativeLayout_01"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ProgressBar android:id="@+id/sb_pb" android:layout_width="80dip"
			android:layout_height="80dip" android:layout_centerHorizontal="true"
			android:visibility="gone"></ProgressBar>
		<TextView android:id="@+id/sb_wait" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/fetching_xml"
			android:layout_centerHorizontal="true" android:layout_centerVertical="true">
		</TextView>
	</RelativeLayout>
</LinearLayout>
