<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<EditTextPreference 
		android:key="playerName"
		android:title="Enter Your Name" 
		android:summary="Click to enter a new name"
		android:dialogTitle="Enter Your Name" 
		android:defaultValue="PlayerRock" />
	<CheckBoxPreference 
		android:key="force_en"
		android:title="Force English language" 
		android:summaryOn="Force display in English.(Restart)"
		android:summaryOff="Display language base on system locale setting.(Restart)" 
		android:defaultValue="false">
	</CheckBoxPreference>
	<CheckBoxPreference 
		android:key="repeat"
		android:title="Allow repeated songs" 
		android:summaryOn="Songs may repeat."
		android:summaryOff="Songs may NOT repeat." 
		android:defaultValue="false">
	</CheckBoxPreference>
	<CheckBoxPreference 
		android:key="id3tag"
		android:title="ID3 Options" 
		android:summaryOn="Use ID3 Tags(if exists)."
		android:summaryOff="Do NOT use ID3 Tags." 
		android:defaultValue="false">
	</CheckBoxPreference>
	<CheckBoxPreference 
		android:key="anim"
		android:title="Animation Options"
		android:summaryOn="All animations will be played.(This will consume more CPU)"
		android:summaryOff="Animations is OFF.(For lower rated CPUs)"
		android:defaultValue="true">
	</CheckBoxPreference>

